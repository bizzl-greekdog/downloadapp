{% extends '::base.html.twig' %}

{% block title %}
    #{{ notification.id }} - {{ notification.title }} -
{% endblock %}

{% block header %}
    <header>
        <a href="{{ path('app_list_downloads', {page: 1}) }}"><span class="fa fa-arrow-left"></span> Overview</a>
        <div class="stats">
            <span>Downloads: {{ stats['Not Downloaded'] }} / {{ stats['Total'] }}</span>
            <span>Enqueued: {{ stats['Enqueued'] }}</span>
        </div>
    </header>
{% endblock %}

{% block body %}
    <main class="notification {{ notification.type }}">
        <p>{{ notification.text }}</p>
        {% if '//' in notification.url %}<code>URL: <a href="{{ notification.url }}">{{ notification.url }}</a></code><br/>{% endif %}
        {% if '//' in notification.referer %}<code>Referer: <a href="{{ notification.referer }}">{{ notification.referer }}</a></code>{% endif %}
    </main>
{% endblock %}
